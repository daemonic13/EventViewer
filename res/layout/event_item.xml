<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_item_text"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/background"
    android:orientation="horizontal"
    tools:context=".EventMainActivity" >

    <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="40dp" android:orientation="vertical">

        <TextView
            android:id="@+id/event_item_datestart"
            style="@style/DateDisplay"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/teststring" />
       
        <TextView
            android:id="@+id/event_item_dateend"
            style="@style/DateDisplay"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/teststring" />

    </LinearLayout>
    
    <TextView
        android:id="@+id/event_item_title"
        style="@style/TitleDisplay"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="4"
        android:gravity="center_vertical"
        android:paddingLeft="4dp"
        android:text="@string/teststring" >

    </TextView>

    

</LinearLayout>