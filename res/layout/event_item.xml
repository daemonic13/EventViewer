<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_item_text_container"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:padding="1dp"
    android:background="@drawable/softbluebackground"
    android:orientation="vertical"
    tools:context=".EventMainActivity" >
        
    <TextView
        android:id="@+id/event_item_title"
        style="@style/TitleDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="@string/teststring" >

    </TextView>

    <LinearLayout 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        
        <Space
            android:layout_width="4dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/event_item_datestart"
            style="@style/DateDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/teststring" />

        <Space
            android:layout_width="12dp"
            android:layout_height="match_parent" />
       
        <TextView
            android:id="@+id/event_item_dateend"
            style="@style/DateDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/teststring" />

    </LinearLayout>

    
</LinearLayout>