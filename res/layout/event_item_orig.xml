<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_item_text_container"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:padding="1dp"
    android:orientation="horizontal"
    android:background="@drawable/softbluebackground" 
    tools:context=".EventMainActivity" >

    <LinearLayout 
        android:layout_width="0dp" 
        android:layout_weight="1"
        android:layout_height="40dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/event_item_datestart"
            style="@style/DateDisplay"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:gravity="right|center_horizontal"
            android:text="@string/teststring" />
       
        <TextView
            android:id="@+id/event_item_dateend"
            style="@style/DateDisplay"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:gravity="right|center_horizontal"
            android:maxWidth="10dp"
            android:text="@string/teststring" />

    </LinearLayout>
    
    <TextView
        android:id="@+id/event_item_title"
        style="@style/TitleDisplay"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="4"
        android:gravity="left|center_vertical"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="@string/teststring" >

    </TextView>
    
</LinearLayout>